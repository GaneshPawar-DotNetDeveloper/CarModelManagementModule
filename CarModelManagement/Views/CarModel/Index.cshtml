@model IEnumerable<CarModels.Models.CarModel>

<h2>Car Model List</h2>
<table class="table">
    <thead>
        <tr>
            <th>Brand</th>
            <th>Class</th>
            <th>Model Name</th>
            <th>Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var model in Model)
        {
            <tr>
                <td>@model.Brand </ td >
                <td>@model.Class </ td >
                <td>@model.ModelName </ td >
                <td>@model.Price </ td >
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = model.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = model.Id })
                </td>
            </tr>
        }
    </tbody>
</table>

@Html.ActionLink("Add New Car Model", "Create", null, new { @class = "btn btn-primary" })
